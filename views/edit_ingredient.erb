<h1>Update <%= @ingredient.name() %> Ingredient</h1>

<form action="/ingredients/<%= @ingredient.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

    <label class="form-label" for="name">Rename your ingredient:</label>
    <br>
    <input class="form-group" id="name" name="name" type="text">
    <br>
    <button type="submit" class="button btn-success">Update Ingredient</button>
</form>
<br>
<form action="/ingredients/<%= @ingredient.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="button btn-danger">Delete Ingredient</button>
</form>
<br>
<a href="/ingredients">Back to ingredients</a>
