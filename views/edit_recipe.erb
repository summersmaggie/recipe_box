<h1>Update <%= @recipe.title() %> Recipe</h1>

<form action="/recipes/<%= @recipe.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
    <br>
    <label for="title">Rename your recipe:</label>
    <br>
    <input id="title" name="title" type="text">
    <br>
    <br><button type="submit" class="button btn-success">Update Recipe</button>
</form>
<br>
<form action="/recipes/<%= @recipe.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="button btn-danger">Delete Recipe</button>
</form>
