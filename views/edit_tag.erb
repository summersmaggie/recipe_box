<h1>Update <%= @tag.category() %> Category</h1>

<form action="/tags/<%= @tag.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

    <label for="category">Rename your category:</label>
    <br>
    <input id="category" name="category" type="text">
    <br>
    <br><button type="submit" class="button btn-success">Update Category!</button>
</form>
<br>
<form action="/tags/<%= @tag.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="button btn-danger">Delete Category</button>
</form>
<br>
<a href="/tags">Back to Categories!</a>
